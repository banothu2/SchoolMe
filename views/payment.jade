html
  head
  body
    h1 Braintree Credit Card Transaction Form
    div
      div
      form(action='/create_transaction', method='POST', id='braintree-payment-form')
        p
          label Amount
          input(type='number', min='500', max='10000', name='amount')
        p
          label Card Number
          input(type='text', size='20', autocomplete='off', data-encrypted-name='number')
        p
          label CVV
          input(type='text', size='4', autocomplete='off', data-encrypted-name='cvv')
        p
          label Expiration (MM/YYYY)
          input(type='text', size='2', name='month')
          | /
          input(type='text', size='4', name='year')
        input#submit(type='submit')
  script(src='https://js.braintreegateway.com/v1/braintree.js')
  script(type='text/javascript').
    var braintree = Braintree.create('');
    braintree.onSubmitEncryptForm('braintree-payment-form');
